<AnchorPane fx:id="anchorPane" xmlns="http://javafx.com/javafx/8.0.251" xmlns:fx="http://javafx.com/fxml/1" fx:controller="LogIn.SignIn.SignInCon">
    <children>
        <ImageView fx:id="imageView" fitHeight="809.0" fitWidth="654.0" layoutX="623.0" layoutY="96.0" opacity="0.85" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../../Resources/Photos/SignIn.png" />
            </image>
         <effect>
            <DropShadow color="#9a9898" height="193.55" radius="96.275" width="193.55" />
         </effect>
        </ImageView>
        <TextField fx:id="nameField" layoutX="1018.0" layoutY="412.0" onKeyPressed="#handle" onKeyReleased="#handle" prefHeight="69.0" prefWidth="190.0" stylesheets="@SignInStyle.css" />
        <TextField fx:id="passField" layoutX="1018.0" layoutY="501.0" onKeyPressed="#handle" onKeyReleased="#handle" prefHeight="69.0" prefWidth="190.0" stylesheets="@SignInStyle.css" />
        <Label fx:id="goRetrievalPass" onMouseClicked="#goRetrievalPass" layoutX="973.0" layoutY="646.0" stylesheets="@SignInStyle.css" text="Forgot Paswword?">
            <font>
                <Font size="34.0" />
            </font>
        </Label>
        <Label fx:id="nameLbl" layoutX="938.0" layoutY="411.0" stylesheets="@SignInStyle.css" text="name:">
            <font>
                <Font size="34.0" />
            </font>
        </Label>
        <Label fx:id="passLbl" layoutX="907.0" layoutY="502.0" stylesheets="@SignInStyle.css" text="password:">
            <font>
                <Font size="34.0" />
            </font>
        </Label>
        <AnchorPane layoutX="1384.0" layoutY="291.0" prefHeight="85.0" prefWidth="202.0" />
        <Label fx:id="goSignUp" layoutX="1014.0" layoutY="588.0" stylesheets="@SignInStyle.css" text="Sign Up" onMouseClicked="#goSignUp">
            <font>
                <Font size="34.0" />
            </font>
        </Label>
        <Button fx:id="enter" disable="true" layoutX="1018.0" layoutY="796.0" mnemonicParsing="false" onAction="#SignIn" stylesheets="@SignInStyle.css" text="Enter" />
        <Label id="reportUp" fx:id="report" layoutX="919.0" layoutY="696.0" prefHeight="90.0" prefWidth="323.0" stylesheets="@SignInStyle.css" text="     " textAlignment="CENTER" wrapText="true" />

    </children>
</AnchorPane>
